                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/yatim_date_of_birth"
                    android:paddingStart="8dp"
                    android:textColor="@color/black_tran"
                    android:textColorHint="@color/black_tran" />
            </LinearLayout>

            <TextView
